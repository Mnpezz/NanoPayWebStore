    <script>
        function isValidUrl(string) {
            try {
                new URL(string);
                return true;
            } catch (_) {
                return false;  
            }
        }

        function submitStore() {
            const storeUrl = document.getElementById('storeUrlInput').value;
            if (!storeUrl || !isValidUrl(storeUrl)) {
                alert("Please enter a valid URL");
                return;
            }

            NanoPay.open({
                address: '@mnpezz',
                notify: 'mnpezz@gmail.com',
                contact: false,
                shipping: false,
                currency: 'USD',
                line_items: [
                    {
                        name: "Store Submission",
                        quantity: 1,
                        price: "1.00"
                    }
                ],
                note: `Submitted store URL: ${storeUrl}`,
                success: (block) => {
                    alert("Payment successful! Your store URL has been submitted.");
                    document.getElementById('storeUrlInput').value = '';
                },
                cancel: () => {
                    alert("Payment cancelled");
                }
            });
        }
    </script>
